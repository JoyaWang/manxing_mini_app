.weui-btn {
  display: inline-block;
  padding: 0 16px;
  line-height: 2.3;
  border-radius: 4px;
  border: none;
  font-size: 14px;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
}

.weui-btn_primary {
  background-color: #07C160;
  color: #fff;
}

.weui-btn_default {
  background-color: #f2f2f2;
  color: #333;
  border: 1px solid #ddd;
}

.weui-btn_mini {
  padding: 0 8px;
  line-height: 1.8;
  font-size: 12px;
}

.weui-cells {
  margin-top: 0;
  background-color: #fff;
  line-height: 1.4;
  font-size: 14px;
  overflow: hidden;
  position: relative;
}

.weui-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  color: #e5e5e5;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.weui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #e5e5e5;
  color: #e5e5e5;
  transform-origin: 0 100%;
  transform: scaleY(0.5);
}

.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
}

.weui-cell:before {
  content: " ";
  position: absolute;
  left: 15px;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  color: #e5e5e5;
  transform-origin: 0 0;
  transform: scaleY(0.5);
  left: 15px;
}

.weui-cell__hd {
  margin-right: 5px;
}

.weui-cell__bd {
  flex: 1;
}

.weui-cell__ft {
  text-align: right;
  color: #999;
}

.weui-cell_access {
  cursor: pointer;
}

.weui-cell_access .weui-cell__ft:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: relative;
  top: -2px;
  margin-left: 5px;
}

.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}

.weui-input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 44px;
  line-height: 44px;
}

.weui-textarea {
  display: block;
  border: 0;
  resize: none;
  width: 100%;
  color: inherit;
  font-size: 1em;
  line-height: inherit;
  outline: 0;
}

.weui-label {
  display: block;
  width: 105px;
  word-wrap: break-word;
  word-break: break-all;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  font-size: 14px;
  color: #999;
}

