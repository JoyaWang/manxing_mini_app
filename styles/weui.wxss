.weui-progress {
  display: flex;
  align-items: center;
  height: 3px;
  background-color: #ebebeb;
}

.weui-progress__bar {
  background-color: #09bb07;
  height: 3px;
}

.weui-progress__inner-bar {
  height: 100%;
  background-color: #09bb07;
  transition: width 0.3s;
}

.weui-icon {
  font-family: "weui";
  font-size: 16px;
  font-style: normal;
  font-weight: normal;
  speak: none;
  display: inline-block;
  text-decoration: inherit;
  text-align: center;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
}

