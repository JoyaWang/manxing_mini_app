/* pages/admin/section-manage/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  background: white;
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.back-button {
  display: flex;
  align-items: center;
  color: #007AFF;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.back-icon {
  margin-right: 8rpx;
  font-weight: bold;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

/* 板块列表 */
.section-list {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.section-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-item:last-child {
  border-bottom: none;
}

.section-info {
  flex: 1;
}

.section-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.section-status {
  font-size: 24rpx;
  font-weight: 500;
}

.section-status.enabled {
  color: #28a745;
}

.section-status.disabled {
  color: #dc3545;
}

.section-switch {
  transform: scale(0.8);
}

/* 操作按钮 */
.action-buttons {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-save {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  width: 100%;
}

.btn-save:active {
  opacity: 0.8;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .section-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .section-switch {
    align-self: flex-end;
  }
}