/* 页面容器 - 更紧凑 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 10rpx;
}

/* 页面标题 - 更紧凑 */
.page-header {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
}

/* 返回按钮样式 */
.btn-back {
  background: #f7fafc;
  color: #007aff;
  border: 1rpx solid #e2e8f0;
  border-radius: 6rpx;
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.back-icon {
  font-size: 28rpx;
  font-weight: bold;
}

/* 卡片样式 - 更紧凑 */
.card {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748; /* 深灰色标题 */
}

.card-body {
  padding: 20rpx 25rpx;
}

/* 表单组 - 更紧凑 */
.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 26rpx;
  color: #4a5568; /* 中灰色标签 */
  margin-bottom: 8rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 6rpx;
  padding: 0 16rpx;
  font-size: 26rpx;
  background: #fff;
}

.form-input:focus {
  border-color: #007aff;
}

.form-textarea {
  width: 100%;
  min-height: 100rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 6rpx;
  padding: 16rpx;
  font-size: 26rpx;
  background: #fff;
}

.form-textarea.large {
  min-height: 150rpx;
}

/* 分类选择区域 - 更紧凑 */
.category-section {
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.category-picker {
  flex: 1;
}

.picker-display {
  height: 70rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 6rpx;
  padding: 0 16rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  background: #fff;
  color: #4a5568;
}

/* 价格行 - 更紧凑 */
.price-row {
  display: flex;
  gap: 15rpx;
}

.half-width {
  flex: 1;
}

/* 按钮样式 - 更紧凑 */
.btn-primary {
  background: #007aff;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

.btn-primary:disabled {
  background: #ccc;
}

.btn-secondary {
  background: #f7fafc;
  color: #4a5568;
  border: 1rpx solid #e2e8f0;
  border-radius: 6rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

.btn-small {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}

.btn-large {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
}

.btn-icon {
  background: none;
  border: none;
  color: #007aff;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
}

.btn-danger {
  color: #e53e3e;
}

/* 图片上传区域 - 更紧凑 */
.image-upload-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.main-image-section {
  margin-bottom: 15rpx;
}

.image-uploader {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx dashed #e2e8f0;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7fafc;
}

.upload-placeholder {
  text-align: center;
  color: #a0aec0;
  font-size: 22rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}

.gallery-section {
  margin-top: 15rpx;
}

.image-gallery {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.image-item {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.gallery-image {
  width: 100%;
  height: 100%;
}

.image-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  padding: 6rpx;
  display: flex;
  justify-content: center;
}

.add-image-btn {
  width: 100rpx;
  height: 100rpx;
  border: 2rpx dashed #e2e8f0;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #a0aec0;
  font-size: 22rpx;
  background: #f7fafc;
}

/* SKU管理 - 更紧凑，修复标题换行问题 */
.sku-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.sku-item {
  border: 1rpx solid #e2e8f0;
  border-radius: 6rpx;
  padding: 15rpx;
  background: #f7fafc;
}

.sku-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.sku-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3748;
  white-space: nowrap; /* 防止换行 */
  overflow: hidden;
  text-overflow: ellipsis;
}

.sku-actions {
  display: flex;
  gap: 8rpx;
  flex-shrink: 0; /* 防止按钮被压缩 */
}

.sku-details {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.sku-detail-item {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.detail-label {
  color: #718096;
  font-size: 22rpx;
  white-space: nowrap;
}

.detail-value {
  color: #4a5568;
  font-size: 22rpx;
  font-weight: 500;
}

.no-skus {
  text-align: center;
  color: #a0aec0;
  font-size: 26rpx;
  padding: 30rpx;
}

/* 状态区域 - 更紧凑 */
.status-section {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.status-label {
  font-size: 26rpx;
  color: #4a5568;
}

.status-picker {
  flex: 1;
}

/* 提交区域 - 更紧凑 */
.submit-section {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

/* 模态框样式 - 更紧凑 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  background: white;
  border-radius: 12rpx;
  width: 80%;
  max-width: 550rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  padding: 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
}

.close-btn {
  font-size: 36rpx;
  color: #a0aec0;
  cursor: pointer;
}

.modal-body {
  padding: 25rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-actions {
  display: flex;
  gap: 15rpx;
  margin-top: 25rpx;
}

.modal-actions button {
  flex: 1;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .container {
    padding: 8rpx;
  }

  .card-body {
    padding: 15rpx 20rpx;
  }

  .price-row {
    flex-direction: column;
    gap: 12rpx;
  }

  .category-section {
    flex-direction: column;
    gap: 12rpx;
  }

  .modal-content {
    width: 85%;
  }
}

/* 标题颜色层次区分 */
.page-title {
  color: #1a1a1a; /* 最深的黑色，用于页面标题 */
}

.card-title {
  color: #2d3748; /* 深灰色，用于卡片标题 */
}

.form-label {
  color: #4a5568; /* 中灰色，用于表单标签 */
}

.sku-name {
  color: #2d3748; /* 深灰色，用于SKU标题 */
}

.detail-label {
  color: #718096; /* 浅灰色，用于详情标签 */
}

.status-label {
  color: #4a5568; /* 中灰色，用于状态标签 */
}

.form-hint {
  color: #718096; /* 浅灰色，用于提示文字 */
  font-size: 12px;
  margin-top: 4px;
  font-style: italic;
}
