/* pages/admin/order-manage/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  background: white;
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.back-button {
  display: flex;
  align-items: center;
  color: #007AFF;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.back-icon {
  margin-right: 8rpx;
  font-weight: bold;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

/* 搜索和筛选 */
.filters {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 16rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  padding: 0;
}

.search-icon {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx;
}

.filter-row {
  display: flex;
  gap: 16rpx;
}

.filter-select {
  flex: 1;
}

.filter-label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.filter-arrow {
  font-size: 20rpx;
  color: #666;
}

/* 订单列表 */
.order-list {
  margin-bottom: 30rpx;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.order-id {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.order-time {
  font-size: 22rpx;
  color: #666;
}

.order-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.order-user, .order-amount {
  font-size: 24rpx;
  color: #666;
}

.order-amount {
  color: #ff6b6b;
  font-weight: bold;
}

.order-status-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-status {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-weight: 500;
}

.order-status.pending {
  background: #fff3cd;
  color: #856404;
}

.order-status.processing {
  background: #cce5ff;
  color: #004085;
}

.order-status.shipped {
  background: #d4edda;
  color: #155724;
}

.order-status.completed {
  background: #d1ecf1;
  color: #0c5460;
}

.order-actions {
  display: flex;
  gap: 8rpx;
}

.btn-action, .btn-detail {
  border: none;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  min-width: 80rpx;
}

.btn-action {
  background: #007bff;
  color: white;
}

.btn-detail {
  background: #6c757d;
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  background: white;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 60rpx;
  display: block;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 分页 */
.pagination {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.page-btn {
  background: #007bff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

.page-btn.disabled {
  background: #ccc;
  opacity: 0.6;
}

.page-info {
  font-size: 26rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .order-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
  
  .order-info {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .order-status-row {
    flex-direction: column;
    gap: 12rpx;
    align-items: flex-start;
  }
  
  .order-actions {
    width: 100%;
    justify-content: flex-end;
  }
}