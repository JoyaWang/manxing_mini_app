/* pages/order/list.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

/* 标签栏 */
.tab-bar {
  background: white;
  border-bottom: 1rpx solid #eee;
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  padding: 25rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #FF6B35;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 4rpx;
  background: #FF6B35;
  border-radius: 2rpx;
}

/* 加载和空状态 */
.loading, .empty {
  text-align: center;
  padding: 100rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
  display: block;
}

.empty-text {
  font-size: 32rpx;
}

/* 订单列表 */
.order-list {
  flex: 1;
  padding: 20rpx;
}

.orders {
  margin-bottom: 40rpx;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
}

.order-status.pending {
  color: #FF6B35;
}

.order-status.paid {
  color: #FF9F1C;
}

.order-status.shipped {
  color: #4ECDC4;
}

.order-status.completed {
  color: #07C160;
}

.order-status.cancelled {
  color: #999;
}

/* 商品信息 */
.order-products {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.product-images {
  flex: 1;
  display: flex;
  gap: 10rpx;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}

.product-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 订单底部 */
.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-price {
  display: flex;
  align-items: center;
}

.order-price text {
  font-size: 26rpx;
  color: #666;
}

.order-price .price {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF6B35;
  margin-left: 8rpx;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
}

.btn-action {
  padding: 12rpx 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  background: white;
}

.btn-action.primary {
  border-color: #FF6B35;
  color: #FF6B35;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}