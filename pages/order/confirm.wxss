/* pages/order/confirm.wxss */
.container {
  padding-bottom: 120rpx;
  background: #f8f8f8;
}

.loading {
  text-align: center;
  padding: 100rpx;
  color: #999;
}

.card {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 地址部分 */
.address-section {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.address-content {
  flex: 1;
}

.address-empty {
  flex: 1;
  color: #999;
  text-align: center;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  display: block;
  margin-bottom: 10rpx;
}

.default-tag {
  background: #FF6B35;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.arrow {
  font-size: 36rpx;
  color: #999;
  transform: rotate(90deg);
}

/* 商品部分 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.order-items {
  margin: -20rpx 0;
}

.order-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}

.item-sku {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
  display: block;
}

.item-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF6B35;
}

.quantity {
  font-size: 24rpx;
  color: #999;
}

/* 支付方式 */
.payment-options {
  margin: -20rpx 0;
}

.payment-option {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.payment-option:last-child {
  border-bottom: none;
}

.payment-option.selected {
  color: #FF6B35;
}

.payment-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.payment-name {
  flex: 1;
  font-size: 28rpx;
}

.payment-check {
  font-size: 28rpx;
  color: #FF6B35;
  display: none;
}

.payment-option.selected .payment-check {
  display: block;
}

/* 备注部分 */
.remark-input {
  width: 100%;
  height: 120rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 价格明细 */
.price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #666;
}

.price-row.total {
  border-top: 1rpx solid #eee;
  margin-top: 15rpx;
  padding-top: 25rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.total-price {
  color: #FF6B35;
}

/* 底部提交栏 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-top: 1rpx solid #eee;
  z-index: 100;
}

.submit-bar .total-price {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.submit-bar .price {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF6B35;
}

.submit-btn {
  background: #FF6B35;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}