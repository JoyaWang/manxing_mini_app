/* pages/order/detail.wxss */
.container {
  padding-bottom: 120rpx;
  background: #f8f8f8;
}

/* 返回按钮样式 */
.back-button {
  display: flex;
  align-items: center;
  padding: 20rpx;
  color: #007AFF;
  font-size: 32rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}

.back-icon {
  margin-right: 10rpx;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 100rpx;
  color: #999;
}

.card {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 订单状态 */
.status-section {
  text-align: center;
  padding: 50rpx 30rpx;
}

.status-section.pending {
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  color: white;
}

.status-section.paid {
  background: linear-gradient(135deg, #FF9F1C, #FFB84D);
  color: white;
}

.status-section.shipped {
  background: linear-gradient(135deg, #4ECDC4, #6EDBD6);
  color: white;
}

.status-section.completed {
  background: linear-gradient(135deg, #07C160, #2CD673);
  color: white;
}

.status-section.cancelled {
  background: linear-gradient(135deg, #999, #BBB);
  color: white;
}

.status-text {
  font-size: 40rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 15rpx;
}

.status-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 地址部分 */
.address-section {
  padding: 30rpx;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

/* 商品部分 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.order-items {
  margin: -20rpx 0;
}

.order-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}

.item-sku {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
  display: block;
}

.item-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF6B35;
}

.quantity {
  font-size: 24rpx;
  color: #999;
}

/* 订单信息 */
.info-section {
  padding: 30rpx;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
  color: #666;
}

.info-row:last-child {
  border-bottom: none;
}

.order-no {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.copy-btn {
  color: #FF6B35;
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border: 1rpx solid #FF6B35;
  border-radius: 6rpx;
}

.remark {
  color: #333;
  font-weight: 500;
}

/* 价格明细 */
.price-section {
  padding: 30rpx;
}

.price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #666;
}

.price-row.total {
  border-top: 1rpx solid #eee;
  margin-top: 15rpx;
  padding-top: 25rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.total-price {
  color: #FF6B35;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx;
  border-top: 1rpx solid #eee;
  gap: 20rpx;
}

.btn-action {
  padding: 16rpx 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background: white;
}

.btn-action.primary {
  border-color: #FF6B35;
  color: #FF6B35;
}