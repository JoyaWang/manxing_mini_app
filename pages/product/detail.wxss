/* pages/product/detail.wxss */
.container {
  padding-bottom: 100rpx;
  background: #f8f8f8;
}

/* 返回按钮样式 */
.back-button {
  display: flex;
  align-items: center;
  padding: 20rpx;
  color: #007AFF;
  font-size: 32rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}

.back-icon {
  margin-right: 10rpx;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 100rpx;
  color: #999;
}

/* 商品轮播 */
.product-swiper {
  height: 750rpx;
  background: white;
}

.product-image {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.card {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.price-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.current-price {
  font-size: 48rpx;
  font-weight: 600;
  color: #FF6B35;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: block;
}

.meta-info {
  display: flex;
  gap: 30rpx;
  color: #999;
  font-size: 24rpx;
}

/* 商品简介样式 */
.product-description {
  margin-bottom: 20rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* SKU选择 */
.sku-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.sku-selected {
  flex: 1;
  margin: 0 20rpx;
  color: #666;
}

.placeholder {
  color: #999;
}

.arrow {
  font-size: 36rpx;
  color: #999;
  transform: rotate(90deg);
}

/* 商品详情 */
.product-detail {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-top: 1rpx solid #eee;
  z-index: 100;
}

.action-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.action-item {
  position: relative;
  padding: 0 20rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.action-item .icon {
  font-size: 36rpx;
  display: block;
  margin-bottom: 4rpx;
}

.action-item .icon.active {
  color: #FF6B35;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: 10rpx;
  background: #FF6B35;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 24rpx;
  text-align: center;
}

.action-right {
  display: flex;
  gap: 20rpx;
}

.btn-add-cart, .btn-buy-now {
  padding: 20rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-add-cart {
  background: #FF9F1C;
  color: white;
}

.btn-buy-now {
  background: #FF6B35;
  color: white;
}

/* SKU弹窗 */
.sku-modal {
  position: fixed;
  bottom: -100%;
  left: 0;
  right: 0;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 1000;
  transition: bottom 0.3s ease;
}

.sku-modal.show {
  bottom: 0;
}

.modal-content {
  padding: 40rpx 30rpx;
}

.modal-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  position: relative;
}

.product-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.modal-header .product-info {
  flex: 1;
}

.modal-header .price {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF6B35;
  display: block;
  margin-bottom: 10rpx;
}

.modal-header .stock {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.modal-header .selected-sku {
  font-size: 24rpx;
  color: #333;
}

.close-btn {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 48rpx;
  color: #999;
  padding: 10rpx;
}

.sku-options {
  margin-bottom: 40rpx;
}

.option-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.option-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.option-item {
  padding: 16rpx 32rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.option-item.active {
  border-color: #FF6B35;
  color: #FF6B35;
  background: rgba(255, 107, 53, 0.1);
}

.quantity-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.btn-decrease, .btn-increase {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #eee;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.quantity-input {
  width: 100rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 10rpx;
}

.btn-confirm {
  background: #FF6B35;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx;
  font-size: 32rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.mask.show {
  opacity: 1;
  visibility: visible;
}