/* pages/product/list.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.search-bar {
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.search-input {
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 50rpx 16rpx 30rpx;
  font-size: 28rpx;
}

.icon-search {
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.filter-bar {
  background: white;
  border-bottom: 1rpx solid #eee;
}

.filter-options {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
}

.filter-item {
  padding: 12rpx 24rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.filter-item.active {
  border-color: #FF6B35;
  color: #FF6B35;
}

.icon-filter {
  margin-left: 8rpx;
  font-size: 24rpx;
}

.sort-options {
  flex: 1;
  display: flex;
  gap: 20rpx;
  overflow-x: auto;
}

.sort-item {
  padding: 12rpx 20rpx;
  white-space: nowrap;
  border-radius: 8rpx;
  background: #f5f5f5;
}

.sort-item.active {
  background: #FF6B35;
  color: white;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  right: -100%;
  width: 80%;
  height: 100vh;
  background: white;
  z-index: 1000;
  transition: right 0.3s ease;
  box-shadow: -4rpx 0 20rpx rgba(0, 0, 0, 0.1);
}

.filter-panel.show {
  right: 0;
}

.filter-content {
  padding: 40rpx 30rpx;
}

.filter-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  display: block;
}

.price-inputs {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.price-input {
  flex: 1;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 16rpx;
  text-align: center;
}

.price-separator {
  color: #999;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-reset, .btn-apply {
  flex: 1;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.btn-reset {
  background: #f5f5f5;
  color: #333;
  border: 1rpx solid #eee;
}

.btn-apply {
  background: #FF6B35;
  color: white;
  border: none;
}

/* 商品列表 */
.product-list {
  flex: 1;
  padding: 20rpx;
  background: #f8f8f8;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.product-image {
  width: 100%;
  height: 280rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 72rpx;
  margin-bottom: 15rpx;
}

.product-price {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.price {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF6B35;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.product-sales {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.product-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  margin-right: 8rpx;
}

.product-tag.discount {
  background: #FF6B35;
  color: white;
}

.load-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.mask.show {
  opacity: 1;
  visibility: visible;
}