/* pages/user/user.wxss */
.container {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户信息 */
.user-section {
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  color: white;
  padding: 60rpx 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 10rpx;
}

.welcome {
  font-size: 28rpx;
  opacity: 0.9;
}

.login-btn {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
}

/* 订单统计 */
.card {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.stats-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.view-all {
  font-size: 26rpx;
  color: #999;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.stat-count {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF6B35;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能菜单 */
.menu-section {
  margin: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon-container {
  width: 50rpx;
  display: flex;
  justify-content: center;
  margin-right: 20rpx;
}

.menu-icon {
  font-size: 36rpx;
}

.menu-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-badge {
  background: #FF6B35;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 30rpx;
  text-align: center;
  margin-right: 15rpx;
}

.menu-arrow {
  font-size: 36rpx;
  color: #999;
  transform: rotate(90deg);
}

/* 后端信息 */
.backend-info {
  text-align: center;
  margin: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  color: #666;
  font-size: 26rpx;
}

/* 底部操作 */
.action-section {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.btn-contact, .btn-about {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  background: white;
}

.btn-contact {
  border-color: #FF6B35;
  color: #FF6B35;
}

.btn-logout {
  flex: 1;
  border: 1rpx solid #ff4757;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #ff4757;
  background: white;
  margin-top: 20rpx;
}