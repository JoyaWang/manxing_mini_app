/* pages/user/address-edit.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 返回按钮样式 */
.back-button {
  display: flex;
  align-items: center;
  padding: 20rpx;
  color: #007AFF;
  font-size: 32rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}

.back-icon {
  margin-right: 10rpx;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
}

.form-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input, .textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  border: none;
  outline: none;
}

.textarea {
  height: 120rpx;
  padding: 20rpx 0;
  line-height: 1.4;
}

.picker {
  flex: 1;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.checkbox-item {
  justify-content: space-between;
}

.switch {
  transform: scale(0.8);
}

/* 操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
}

.btn-save {
  flex: 2;
  background: #FF6B35;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 25rpx;
  font-size: 32rpx;
}

.btn-delete {
  flex: 1;
  background: #FF6B6B;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 25rpx;
  font-size: 32rpx;
}